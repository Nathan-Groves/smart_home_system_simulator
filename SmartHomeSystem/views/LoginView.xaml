<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SmartHomeSystem.ViewModels"
             x:DataType="viewmodel:LoginViewModel"
             x:Class="SmartHomeSystem.views.LoginView"
             Title="Login">
    <Grid RowDefinitions=".3*,.7*">
        <Image Aspect="AspectFill" Source="logo.png"/>
        <Grid BackgroundColor="Blue" Opacity=".8" />
        <Grid ColumnDefinitions="*,*">
            <Image Aspect="AspectFit"
                HeightRequest="120"
                Source="logo1.png"/>
        </Grid>
        <Grid Grid.Row="1">
            <RoundRectangle Margin="-5,-30,-5,2"
                CornerRadius="30,30,0,0"
                Fill="White"/>
            <VerticalStackLayout Margin="30,0,30,0">
                <Label FontAttributes="Bold"
                    FontFamily="bold"
                    FontSize="Medium"
                    Text="Welcome!"
                    TextColor="#2d2d2d"/>
                <Label FontFamily="medium"
                    Text="Log in to continue."
                    TextColor="#A3A3A5"/>

                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>

                        <Entry Grid.Column="1"
                            Placeholder="Email"
                            VerticalOptions="Center"
                            Text="{Binding Email}"
                            Keyboard="Email"
                            IsSpellCheckEnabled="False"
                            IsTextPredictionEnabled="False"
                            ClearButtonVisibility="WhileEditing"/>
                </Grid>

                <Grid Margin="0,30,0,0" ColumnDefinitions=".2*,.8*">
                    <RoundRectangle BackgroundColor="#EDEBF6"
                        CornerRadius="10"
                        HeightRequest="60"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="60"/>

                        <Entry Grid.Column="1"
                            Placeholder="Password"
                            VerticalOptions="Center"
                            Text="{Binding Password}"
                            IsPassword="True"
                            IsSpellCheckEnabled="False"
                            ReturnType="Done"/>
                </Grid>
                <Button 
                    Margin="0,20,0,0"
                    BackgroundColor="Blue"
                    HeightRequest="60"
                    Text="Login"
                    TextColor="White"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding CanLogin}"/>
               <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Text="Forgot Password?"
                    TextColor="Blue"
                    TextDecorations="Underline">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
                <Button
                    Margin="0,30,0,0"
                    BackgroundColor="WhiteSmoke"
                    HeightRequest="60"
                    Text="Create Account"
                    TextColor="Blue"
                    Command="{Binding NavigateToRegisterCommand}"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>